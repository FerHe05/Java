import java.util.Scanner;

public class App {
    public static void main(String[] args) throws Exception {
       
        Scanner sc = new Scanner(System.in);
        System.out.println("Digite um valor (1 ao 7)");
        int x = sc.nextInt();
        String dia;
      
        switch (x){
            case 1: 
                dia = "Sunday";
                break;
            case 2: 
                dia = "Monday";
                break;
            case 3: 
                dia = "Tuesday";
                break;
            case 4: 
                dia = "Wednesday";
                break;
            case 5: 
                dia = "Thursday";
                break;
            case 6: 
                dia = "Friday";
                break;
            case 7: 
                dia = "Saturday";
                break;
            default:
                dia = "valor invalido";
                break;
        }
       
        System.out.println("Day of the week: " + dia);
        
        sc.close();

    }
}
